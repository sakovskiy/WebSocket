{
    "name": "phan2m/lara",
    "description": "Framework on Lara core",
    "type": "project",
    "authors": [
        {
            "name": "Sergiy Sakovskiy",
            "email": "sakovskiy.sergiy@gmail.com"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php": "~7.1",
        "cboden/ratchet": "~0.4",
        "illuminate/container":"5.3.*",
        "illuminate/config": "5.3.*",
        "illuminate/support": "5.3.*"
    },
    "require-dev": {
        "squizlabs/php_codesniffer":"~2.0",
        "wikimedia/composer-merge-plugin":"~1.3"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        }
    },
    "extra": {
        "merge-plugin":{
            "require":[
                "src/Foundation/composer.json"
            ]
        }
    },
    "config":{
        "bin-dir": "bin",
        "platform": {
            "php": "7.1"
        }
    }
}
